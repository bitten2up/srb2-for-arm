#/bin/bash
sudo apt-get -qq -y --no-install-recommends install git build-essential libpng-dev libsdl2-mixer-dev libgme-dev gettext ccache wget gcc upx libopenmpt-dev libcurl4-openssl-dev unzip zip; git clone --branch master https://github.com/STJr/SRB2.git;LIBGME_CFLAGS=-I/usr/include LIBGME_LDFLAGS=-lgme make -C SRB2/src LINUX=1 WARNINGMODE=1 CCACHE=1 NONX86=1 -k -j4; mkdir /usr/games/SRB2; cp SRB2/bin/lsdl2srb2 /usr/games/SRB2; cd /usr/games/SRB2; sudo wget https://github.com/STJr/SRB2/releases/download/SRB2_release_2.2.9/SRB2-v229-Full.zip; sudo unzip SRB2-v229-Full.zip; rm -rf *.zip;cd
